<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nulp.bohdanuhryn.snake" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".gui.MainMenuActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.LevelSelectActivity"
            android:label="@string/title_activity_level"
            android:parentActivityName=".gui.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".gui.LevelActivity"
            android:label="@string/title_activity_level"
            android:parentActivityName=".gui.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".gui.AboutActivity"
            android:label="@string/about_header"
            android:parentActivityName=".gui.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".gui.ScoresActivity"
            android:label="@string/scores_header"
            android:parentActivityName=".gui.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".gui.SoundActivity"
            android:label="@string/sound_header"
            android:parentActivityName=".gui.MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".gui.SaveScoreActivity"
            android:label="@string/save_score_header">
        </activity>
    </application>

</manifest>
